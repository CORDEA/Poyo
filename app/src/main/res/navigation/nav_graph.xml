<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/circleFragment"
        android:name="jp.cordea.poyo.CircleFragment"
        android:label="CircleFragment" />
    <fragment
        android:id="@+id/poyoFragment"
        android:name="jp.cordea.poyo.PoyoFragment"
        android:label="PoyoFragment" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="jp.cordea.poyo.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_poyoFragment"
            app:destination="@id/poyoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_circleFragment"
            app:destination="@id/circleFragment" />
    </fragment>
</navigation>
